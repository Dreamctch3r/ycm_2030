// Mobile Navigation #############
// ###############################
#cbp-spmenu-s2.cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-right
  h3 MENU
  i#hideRight.fa.fa-times-circle
  nav#mobile_menu_content.mobile_menu_content
    a(href="#{baseUrl}") Home
    a(href="#{baseUrl}/#about") About
    a(href="#{baseUrl}/#team") Team
    a(href="#{baseUrl}/#portfolio") Investment
    a(href="#{baseUrl}/#blog") Blog
    a(href="#{baseUrl}/#contact") Contact